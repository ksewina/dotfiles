# Dunst configuration with Gruvbox Dark theme
# See dunst(5) for all configuration options

[global]
    monitor = 0
    follow = none
    
    # Geometry
    width = 350
    height = 300
    origin = top-right
    offset = 16x48
    scale = 0
    notification_limit = 0
    
    # Progress bar
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    
    # Text
    font = JetBrainsMono Nerd Font 11
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    
    # Icons
    icon_position = left
    min_icon_size = 32
    max_icon_size = 48
    
    # History
    sticky_history = yes
    history_length = 20
    
    # Misc/Advanced
    dmenu = /usr/bin/rofi -dmenu -theme gruvbox-dark
    browser = /usr/bin/firefox -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 8
    ignore_dbusclose = false
    
    # Legacy
    force_xinerama = false
    
    # Mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

[urgency_low]
    # Gruvbox colors - low priority
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#689d6a"
    timeout = 10

[urgency_normal]
    # Gruvbox colors - normal priority
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#d79921"
    timeout = 10

[urgency_critical]
    # Gruvbox colors - critical priority
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#cc241d"
    timeout = 0

# Application-specific rules
[discord]
    appname = discord
    background = "#282828"
    foreground = "#b16286"
    frame_color = "#b16286"
    timeout = 5

[spotify]
    appname = Spotify
    background = "#282828"
    foreground = "#98971a"
    frame_color = "#98971a"
    timeout = 5

[volume]
    summary = "Volume*"
    background = "#282828"
    foreground = "#83a598"
    frame_color = "#458588"
    timeout = 2
    set_stack_tag = "volume"

[brightness]
    summary = "Brightness*"
    background = "#282828"
    foreground = "#fabd2f"
    frame_color = "#d79921"
    timeout = 2
    set_stack_tag = "brightness"